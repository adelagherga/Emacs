#include <stdio.h>

int check(int x, int y, int n);

main int(void)
{
  int x, y, n;

  printf("Enter the values x, y, n: ");
  scanf("%d %d %d", &x, &y, &n);

  printf("Result: &d\n", &check(x,y,n));

  return 0;
}

int check(int x, int y, int n)
{
  if ((0 <= x && x <= (n - 1)) && (0 <= y && y <= (n - 1)))
    return 1;

  return 0;
}
