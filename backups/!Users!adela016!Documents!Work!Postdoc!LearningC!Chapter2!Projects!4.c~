#include <stdio.h>

#define TAX 0.05f

int main(void)
{
  float amount, tax_amount, total;

  printf("Enter a dollars-and-cents amount: ");
  scanf("%.2f", &amount);

  tax_amount = amount * TAX;
  total = amount + tax_amount;

  printf("With tax added: %.2f", total);

  return 0;
}
