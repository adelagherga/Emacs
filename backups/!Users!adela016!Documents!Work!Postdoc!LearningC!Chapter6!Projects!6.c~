 * Example:     N/A
 *
 */

#include <stdio.h>

int main(void)
{
  int i, n;

  printf("Enter an integer" );
  scanf("%d", &n);

  for (i = 2; i * i < n, i * i % 2 == 0, i++)
    printf("%d", i * i);

  return 0;
}
