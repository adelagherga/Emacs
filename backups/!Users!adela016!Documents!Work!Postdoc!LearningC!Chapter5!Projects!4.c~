 */

#include <stdio.h>

int main(void)
{
  int speed;

  printf("Enter wind speed (knots): ");
  scanf("%d", speed);

  printf("Beaufort description: ");
  if (speed < 1)
    printf("calm\n");
  else if (speed <= 3)
    printf("light air"\n);
  else if (speed <= 27)
    printf("breeze\n");
  else if (speed <= 47)
    printf("gale\n");
  else if (speed <= 63)
    printf("storm\n");
  else
    printf("hurricane\n");

  return 0;
}
