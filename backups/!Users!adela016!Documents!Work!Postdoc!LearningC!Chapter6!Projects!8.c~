#include <stdio.h>

int main(void)
{
  int i, d, no_days, starting_day;

  printf("Enter number of days in month: ");
  scanf("%d", &no_days);
  printf("Enter starting day of the week (1 = Sun, 7 = Sat): ");
  scanf("%d", &starting_day);

  for (i = 1; i <= n; i++)
    {
      if (i < starting_day)
	printf("  ");
      else
	printf("%-3d", i);

      if ((i + starting_day - 1) % 7 == 0)
	printf("\n");
    }

  return 0;
}
