 * To do list:  N/A
 *
 * Example:     N/A
 *
 */

#include <stdio.h>

int main(void)
{
  int i, j, temp_total;
  int array[5][5];

  for (i = 0; i < 5; i++)
    {
      printf("Enter row %d: ", i + 1);
      for (j = 0 ; j < 5; j++)
	scanf("%d", &array[i][j]);
    }

  printf("Row totals:");
  for (i = 0; i < 5; i++)
    {
      temp_total = 0;
          for (j = 0; j < 5; j++)
	temp_total += array[i][j];
      printf(" %d", temp_total);
    }

  printf("\nColumn totals:");
  for (i = 0; i < 5; i++)
    {
      temp_total = 0;
      for (j = 0; j < 5; j++)
	temp_total += array[j][i];
      printf(" %d", temp_total);
    }

  printf("\n");
  return 0;
}
